@model BusinessObject.BookAuthor

@{
    ViewData["Title"] = "Delete Book Author";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Book Author</h4>
    <hr />
    <dl class="row">
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Book)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorOrder)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuthorOrder)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author.LastName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoyalityPercentage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoyalityPercentage)
        </dd>
    </dl>
    @if (ViewData["BookAuthors"] != null)
    {
        <div class="row ml-0 mr-0">
            <p class="text-danger">@ViewData["BookAuthors"]</p>
        </div>
    }
    <form asp-action="Delete">
        <input type="hidden" asp-for="AuthorId" />
        <input type="hidden" asp-for="BookId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
