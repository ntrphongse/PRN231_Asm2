@model BusinessObject.Publisher

@{
    ViewData["Title"] = "Publisher Details";
}

<h1>Details</h1>

<div>
    <h4>Publisher</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublisherName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublisherName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
    </dl>
</div>
@if (ViewData["Publishers"] != null)
{
    <div class="row ml-0 mr-0">
        <p class="text-danger">@ViewData["Publishers"]</p>
    </div>
}
<div>
    @if (Model != null)
    {

        <a asp-action="Edit" asp-route-id="@Model.PublisherId">Edit</a> @Html.Raw("&verbar;")
    }
    <a asp-action="Index">Back to List</a>
</div>
